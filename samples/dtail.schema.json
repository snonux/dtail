    "loglevel": {
      "type": "string",
      "enum": [
        "None",
        "Fatal",
        "Error",
        "Warn",
        "Info",
        "Default",
        "Verbose",
        "Debug",
        "Devel",
        "Trace",
        "All"
      ]
    },
    "logger": {
      "type": "string",
      "enum": [
        "None",
        "Stdout",
        "File",
        "Fout"
      ]
    },
    "logrotation": {
      "type": "string",
      "enum": [
        "Daily",
        "Signal"
      ]
    },
    "color": {
      "type": "string",
      "enum": [
        "Black",
        "Red",
        "Green",
        "Yellow",
        "Blue",
        "Magenta",
        "Cyan",
        "White"
      ]
    },
    "attribute": {
