        },
        "CacheDir": {
          "type": "string"
        },
        "SSHPort": {
          "type": "integer",
          "minimum": 2,
          "maximum": 16000
        },
        "ExperimentalFeaturesEnable": {
          "type": "boolean"
        }
      }
    }
  },
  "required": [
    "Client",
    "Server",
    "Common"
  ]
